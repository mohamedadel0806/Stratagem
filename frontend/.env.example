# Frontend Environment Configuration
# Copy this to .env.local for local development

# API Configuration
# Set to 'true' to use Kong API Gateway instead of direct proxy
NEXT_PUBLIC_USE_KONG=false

# Kong Gateway URL (only used when USE_KONG=true)
# In production, this would be your Kong Gateway URL
NEXT_PUBLIC_KONG_URL=http://localhost:8001/api

# Proxy URL for direct proxy mode (only used when USE_KONG=false)
# Route: /api/proxy/api/v1/... -> frontend proxy handler -> backend:3001/api/v1/...
NEXT_PUBLIC_PROXY_URL=/api/proxy/api