{
  "name": "grc-platform-frontend",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbo",
    "clean": "rm -rf node_modules/.cache tsconfig.tsbuildinfo && (rm -rf .next || echo 'Note: If .next deletion fails, stop the dev server first')",
    "clean:all": "rm -rf .next node_modules/.cache tsconfig.tsbuildinfo dist build",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:select": "node scripts/validate-select-items.js",
    "format": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:codegen": "playwright codegen",
    "test:dropdowns": "playwright test e2e/assets/physical-asset-form-dropdowns.spec.ts",
    "test:dropdowns:ui": "playwright test e2e/assets/physical-asset-form-dropdowns.spec.ts --ui",
    "test:dropdowns:headed": "playwright test e2e/assets/physical-asset-form-dropdowns.spec.ts --headed",
    "validate": "npm run lint:select && npm run test"
  },
